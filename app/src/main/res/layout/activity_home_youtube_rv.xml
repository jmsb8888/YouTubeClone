<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".rv_activity.YouTubeRecyclerViewActivity">

    <Button
        android:id="@+id/btnGetVideos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textGetVideos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnDeleteVideos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TextExtractVideos"
        app:layout_constraintStart_toEndOf="@+id/btnGetVideos"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btnEditVideos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textEditVideos"
        app:layout_constraintStart_toEndOf="@+id/btnDeleteVideos"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvVideos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnGetVideos" />
</androidx.constraintlayout.widget.ConstraintLayout>